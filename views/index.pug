extends layout
block styles
  link(rel="stylesheet", href="/stylesheets/home.css")

block content
  .menuContainer
    h2.errorMessage#errorMessage #{errorMessage}
    h1.welcomeHeader= title
    p.gameDescription A drawing game just like telephone!
    form.createNewGame(action="/lobby", method="POST")
      button.startNewGame#newGameButton(type='submit' name='newGameBtn' value='true') Start New Game
    form.gameID-form(action="/lobby", method="POST")
      .form-control
        label(for="roomKey") Room Key:
        input(type="text", name="roomKey")#roomKey
        button.submitID#submitButton(type="submit")
